{
  "name": "project-q",
  "displayName": "projectQ",
  "description": "Quincy's project manager toolkit",
  "version": "0.1.5",
  "publisher": "quincyx",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuincyX/vscode-extension-projectQ.git"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "*",
    "onView:projectQListView",
    "onCommand:projectQ.addProject"
  ],
  "contributes": {
    "commands": [
      {
        "command": "projectQ.addProject",
        "title": "添加项目"
      },
      {
        "command": "projectQ.openProject",
        "title": "打开项目（当前窗口）"
      },
      {
        "command": "projectQ.openProjectInNewWindow",
        "title": "打开项目（新窗口）",
        "icon": {
          "light": "image/light/open.svg",
          "dark": "image/dark/open.svg"
        }
      },
      {
        "command": "projectQ.deleteProject",
        "title": "删除项目"
      },
      {
        "command": "projectQ.renameProject",
        "title": "重命名项目"
      },
      {
        "command": "projectQ.changeCategory",
        "title": "修改分组"
      },
      {
        "command": "projectQ.addCategory",
        "title": "添加分组"
      },
      {
        "command": "projectQ.deleteCategory",
        "title": "删除分组"
      },
      {
        "command": "projectQ.refresh",
        "title": "刷新列表",
        "icon": "image/refresh.svg"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectQ",
          "title": "ProjectQ",
          "icon": "image/icon.svg"
        }
      ]
    },
    "views": {
      "projectQ": [
        {
          "id": "projectQListView",
          "name": "项目列表"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "projectQ.openProject",
          "when": "viewItem == project",
          "group": "handleOpen"
        },
        {
          "command": "projectQ.openProjectInNewWindow",
          "when": "viewItem == project",
          "group": "inline"
        },
        {
          "command": "projectQ.renameProject",
          "when": "viewItem == project"
        },
        {
          "command": "projectQ.changeCategory",
          "when": "viewItem == project"
        },
        {
          "command": "projectQ.deleteProject",
          "when": "viewItem == project"
        },
        {
          "command": "projectQ.deleteCategory",
          "when": "viewItem == category"
        }
      ],
      "view/title": [
        {
          "command": "projectQ.refresh",
          "when": "view == projectQListView",
          "group": "navigation"
        },
        {
          "command": "projectQ.addProject",
          "when": "view == projectQListView"
        },
        {
          "command": "projectQ.addCategory",
          "when": "view == projectQListView"
        }
      ]
    },
    "configuration": {
      "projectQ.configLocation": {
        "type": "string",
        "default": "",
        "description": "projectQ.json store place"
      }
    },
    "keybindings": [
      {
        "command": "projectQ.listProjects",
        "key": "shift+alt+p",
        "mac": "cmd+alt+p"
      }
    ]
  },
  "scripts": {
    "dev": "webpack --watch --mode development --info-verbosity verbose",
    "build": "webpack --mode development",
    "vscode:prepublish": "webpack --mode production",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "eslint": "^5.13.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "vscode": "^1.1.36",
    "vscode-test": "^1.0.2",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0",
    "shortid": "^2.2.15"
  }
}
